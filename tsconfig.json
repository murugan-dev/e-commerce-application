{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "jsxImportSource": "react",
    "types": ["react", "react-dom", "node"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",  
    "lib": ["dom", "dom.iterable", "esnext"],
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}